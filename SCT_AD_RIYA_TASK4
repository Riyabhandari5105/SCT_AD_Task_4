<body>

  <h1>ðŸ“· QR Code Scanner & Generator</h1>

  <!-- QR Code Scanner -->
  <div class="section">
    <h2>Scan QR Code</h2>
    <div id="reader"></div>
    <p><strong>Result:</strong> <span id="scan-result">None</span></p>
  </div>

  <!-- QR Code Generator -->
  <div class="section">
    <h2>Create QR Code</h2>
    <input type="text" id="qr-input" placeholder="Enter text or URL">
    <button onclick="generateQRCode()">Generate</button>
    <div id="qrcode"></div>
  </div>

  <script>
    // QR Code Scanner
    function onScanSuccess(decodedText) {
      document.getElementById("scan-result").innerText = decodedText;
    }

    function onScanFailure(error) {
      // Ignore scanning errors
    }

    let html5QrCode = new Html5Qrcode("reader");
    Html5Qrcode.getCameras().then(devices => {
      if (devices && devices.length) {
        html5QrCode.start(
          { facingMode: "environment" }, // rear camera
          { fps: 10, qrbox: { width: 250, height: 250 } },
          onScanSuccess,
          onScanFailure
        );
      }
    }).catch(err => console.error(err));

    // QR Code Generator
    function generateQRCode() {
      let qrText = document.getElementById("qr-input").value;
      let qrContainer = document.getElementById("qrcode");
      qrContainer.innerHTML = ""; // Clear previous QR
      if (qrText.trim() !== "") {
        new QRCode(qrContainer, {
          text: qrText,
          width: 200,
          height: 200
        });
      } else {
        alert("Please enter some text or URL!");
      }
    }
  </script>

